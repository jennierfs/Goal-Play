{
  "name": "goal-play",
  "private": true,
  "version": "1.0.0",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.8.0"
  },
  "scripts": {
    "dev": "vite",
    "dev:full": "concurrently \"pnpm run start:backend:dev\" \"pnpm run dev\"",
    "build": "tsc && vite build",
    "build:frontend": "vite build",
    "build:all": "pnpm run build:backend && pnpm run build:frontend",
    "build:backend": "nest build",
    "start:backend": "node dist/backend/main.js",
    "start:backend:dev": "pnpm run build:backend && node dist/backend/main.js",
    "start:backend:prod": "NODE_ENV=production node dist/backend/main.js",
    "start:prod": "pnpm run build:backend && pnpm run start:backend:prod",
    "deploy:do": "doctl apps create --spec .do/app.yaml",
    "deploy:update": "doctl apps update $APP_ID --spec .do/app.yaml",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "compile": "hardhat compile",
    "deploy:bsc": "hardhat run scripts/deploy-bsc.js --network bsc",
    "deploy:testnet": "hardhat run scripts/deploy-bsc.js --network bscTestnet",
    "verify:bsc": "hardhat verify --network bsc",
    "wallet:strict": "tsc -p tsconfig.wallet-strict.json --noEmit"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.0",

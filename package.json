    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "@noble/ed25519": "^1.7.3",
    "@solana/web3.js": "^1.95.4",
    "@tanstack/react-query": "^5.90.2",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "bignumber.js": "^9.3.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "clsx": "^2.0.0",
    "compression": "^1.8.1",
